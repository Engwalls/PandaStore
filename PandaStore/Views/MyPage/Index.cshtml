@model IEnumerable<PandaStore.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Inköpsdatum")
            </th>
            <th>
                @Html.DisplayName("Totalt belopp")
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderTotalPrice)KR
            </td>
            <td>
                <a class="btn btn-primary" asp-controller="MyPage" asp-action="Details" asp-route-id="@item.OrderID">Details</a>
            </td>
        </tr>}
    </tbody>
</table>
