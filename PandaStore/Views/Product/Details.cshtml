            @Html.DisplayNameFor(model => model.Categorys)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Categorys.CategoryId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTitel)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductTitel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Specification)
        </dt>
        <dd class = "col-sm-10">
