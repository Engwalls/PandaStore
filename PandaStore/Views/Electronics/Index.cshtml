@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Shop</h1>

<h1 style="text-align:center;">Elektronik</h1>

<br />
<br />
@foreach (var item in Model)
{
    @if (item.Categorys.CategoryId == 2)
    {
