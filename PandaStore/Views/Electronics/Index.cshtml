                    <div class="card">
                        <img src="/images/jeansjacket.png" class="card-img-top" alt="Denim Jacket">
                        <div class="card-body">
                            <h5 class="card-title">Denim .CO</h5>
                            <p class="card-text">Jeansjacka för Dam</p>
                            <h6 class="card-title">799 SEK</h6>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-4 col-sm-6 col-12">
                    <div class="card">
                        <img src="/images/tracksuit.png" class="card-img-top" alt="Tracksuit">
                        <div class="card-body">
                            <h5 class="card-title">The Tracksuits</h5>
                            <p class="card-text">Tracksuit / Herr&Dam</p>
                            <h6 class="card-title">399 SEK</h6>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    

}
