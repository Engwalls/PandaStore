@model IEnumerable<PandaStore.Models.Product>
@{
    ViewData["Title"] = "Details";
}
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

    .row.cards-row {
        margin-bottom: 100px;
    }
</style>

<h1 style="text-align:center;">Elektronik</h1>

<br />
<br />

@*Första raden med produkter*@
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <img src="@item.ImgUrl" class="card-img-top" alt="Image">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductTitel</h5>
                        <p class="card-text"></p>
                        <h6 class="card-title"><b>@item.Price SEK</b></h6>
                        <button class="btn btn-primary buy-button" data-product-id="@item.ProductID">Köp</button>
@*
                        <form method="post" action="/customerProduct/AddToCart">
                            <input type="hidden" name="ProductId" value="@item.ProductID" />
                            <input type="hidden" name="Quantity" value="1" /> <!-- Default quantity, you can modify this as needed -->
                            <input type="hidden" name="Price" value="@item.Price" />
                            <button type="submit" class="btn btn-primary buy-button">Köp</button>
                        </form>*@



                        @foreach (var campaign in item.Campaigns)
                        {
                            <p>Rabatt: @campaign.Discount</p>
                            <p>Giltig till: @campaign.EndDate</p>
                        }
                    </div>
                </div>
            </div>
        }
        
    </div>
</div>
