@model PandaStore.Models.Campaign

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Campaign</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Skapad av")
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.PandaUsers.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Produkt")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Products.ProductTitel)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Beskrivning")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Products.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Startdatum")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Slutdatum")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Rabatt")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Discount)%
        </dd>

    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CampaignID" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index">Tillbaka</a>
    </form>
</div>
