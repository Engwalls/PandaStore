@model IEnumerable<PandaStore.Models.Product>
@{
    ViewData["Title"] = "Details";
}
<style>
    .card {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
    }

    .row.cards-row {
        margin-bottom: 100px;
    }
</style>

<h1 style="text-align:center;">Öl, Vin & Sprit</h1>

<br />
<br />

@*Första raden med produkter*@
<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-2 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <img src="@item.ImgUrl" class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductTitel</h5>
                        <p class="card-text">@item.Description</p>
                        <h6 class="card-title"><b>@item.Price SEK</b></h6>
                        <form method="post" asp-controller="CustomerProduct" asp-action="AddToCart">
                            <input type="hidden" name="productId" value="@item.ProductID" />
                            <input type="hidden" name="quantity" value=1 />
                            <input type="hidden" name="price" value="@item.Price" />
                            <button type="submit" class="btn btn-primary buy-button">Köp</button>
                        </form>
                        @foreach (var campaign in item.Campaigns)
                        {
                            <p>Rabatt: @campaign.Discount</p>
                            <p>Giltig till: @campaign.EndDate</p>
                        }
                    </div>
                </div>
            </div>
        }

    </div>
</div>
